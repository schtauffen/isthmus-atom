{
  "name": "@isthmus/atom",
  "version": "1.0.0-rc1.1",
  "description": "A minimalist atom implementation utilizing Ramda",
  "main": "lib/index.js",
  "files": [
    "lib/",
    "dist/"
  ],
  "scripts": {
    "prepublishOnly": "run-s lint test build",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "build": "run-s babel webpack",
    "babel": "cross-env NODE_ENV=production babel -d ./lib ./src -s",
    "webpack": "cross-env NODE_ENV=production webpack -p --display-optimization-bailout",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch"
  },
  "author": "z.schtauffen@gmail.com",
  "license": "ISC",
  "repository": "schtauffen/isthmus-atom",
  "standard": {
    "ignore": [
      "lib/",
      "**/__tests__/"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/__tests__/*[-.]spec.js"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-plugin-ramda": "^1.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "cross-env": "^5.0.1",
    "jest": "^20.0.4",
    "npm-run-all": "^4.0.2",
    "sinon": "^2.3.5",
    "standard": "^10.0.2",
    "webpack": "^3.0.0"
  },
  "dependencies": {
    "ramda": "^0.24.1"
  }
}
